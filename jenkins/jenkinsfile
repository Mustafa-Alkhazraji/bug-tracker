pipeline {
    agent any

    stages  {
        stage('execute Unit test') {
            parallel {
                stage('Unit Tests - backend') {
                    agent {
                        docker {
                            image 'snakee/golang-junit:1.21'
                            reuseNode true
                        }
                    }
                    steps {
                        withEnv([
                            "GOCACHE=${WORKSPACE}/.go_cache",
                            "GOMODCACHE=${WORKSPACE}/.go_mod_cache"
                        ]) {
                            
                            dir('bugtracker-backend'){
                                sh '''
                                    go test ./... -v 2>&1 | go-junit-report > test-results.xml

                                    # create coverage report
                                    go test -coverprofile=coverage.out -covermode=atomic ./...
                                    go tool cover -html=coverage.out -o coverage.html

                                    mkdir -p reports
                                    mv coverage.html reports/
                                '''
                            }
                        }
                    }
                    
                    post {
                        always {
                            junit 'bugtracker-backend/test-results.xml'
                            publishHTML target: [
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report'
                            ]
                        }
                    }
                }
                stage('Unit Tests - frontend') {
                    agent {
                        docker {
                            image 'node:20-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('bugtracker-frontend'){
                            sh '''
                            npm install
                            npm test 
                            mkdir -p reports
                            mv coverage reports/
                            '''
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-frontend/test-results.xml'
                            publishHTML target: [
                                reportDir: 'bugtracker-frontend/reports/coverage',
                                reportFiles: 'index.html',
                                reportName: 'Frontend Coverage Report'
                            ]
                        }
                    }
                }
            }
        }

        stage('Launch Application') {
            agent {
                docker {
                    image 'docker:latest'
                    args '-v /var/run/docker.sock:/var/run/docker.sock -u 0'
                    reuseNode true
                }
            }
            steps {
                sh "docker compose up --build -d"
            }
        }

        stage('API Testing') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.50.0-noble'
                    reuseNode true
                    args '--user 0 --network=host'
                }
            }
            steps {
                dir('tests-api') {
                    sh '''
                    npx wait-port http://localhost:8080/api/health -t 30000
                    npm ci
                    npx playwright test
                    '''
                }
            }
            post {
                always {
                    dir('tests-api/test-results/results.xml') {
                        publishHTML target: [
                            reportDir: 'test-api/playwright-report',
                            reportFiles: 'index.html',
                            reportName: 'playwright API Test Report'
                        ]
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs(deleteDirs: true, notFailBuild: true, patterns: [[pattern: '.go_cache', type: 'EXCLUDE'], [pattern: '.go_mod_cache', type: 'EXCLUDE']])
        }
    }
} 