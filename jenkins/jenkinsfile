pipeline {
    agent any

    stages {
        stage('Unit Tests - backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                // -----------------------------------------------------
                // تم إضافة كتلة withEnv لحل مشكلة الأذونات GOCACHE
                withEnv(["GOCACHE=${WORKSPACE}/.go_cache"]) {
                    
                    dir('bugtracker-backend'){
                        // الآن سيتم تنفيذ الأمر go test باستخدام مسار الـ cache الجديد
                        sh "go test ./... -v" 
                    }
                }
                // -----------------------------------------------------
            }
        }
    }
}