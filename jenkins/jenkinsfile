pipeline {
    agent any

    stages {
        stage('Unit Tests - backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.22'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend'){
                    sh "go test ./... -v" 
                }
            }
        }
    }
}
